<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Aplicação ASP.NET </title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Gestão de Alunos", "ListarAlunos", "Aluno", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <ul class="nav navbar-nav pull-right">
                @{
                    if (Session["login"] == null)
                    {
                        <li>@Html.ActionLink("Login", "Login", "Registo", new { }, new { @class = "navbar-brand" })</li>
                        <li>@Html.ActionLink("Registar", "Registo", "Registo", new { }, new { @class = "navbar-brand" })</li>
                    }
                    else
                    {
                      <li class="navbar-right"> @Html.ActionLink("Sair", "Logout", "Registo", new { }, new { @class = "navbar-brand" })</li>
                      <li class="navbar-right navbar text">@Html.Label("Utilizador: ")@Session["email"]</li>
                    }
                }

            </ul>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Aplicação ASP.NET </p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>